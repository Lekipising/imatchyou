<section class="category-fit">
    <h2>These people might be interesting to you!</h2>
    <div>
        <!--  some random users      -->
        <% for (let i = 0; i < data.length; i++) { %>
        <article>
            <a href="/<%= data[i].firstname %>">
                <img src="<%= data[i].avatar %>" alt="Profile photo">
                <h4>
                    <%= data[i].firstname %>
                </h4>
                <p>
                    <%= data[i].location %>
                </p>
            </a>
        </article>
        <% } %>
    </div>

</section>